<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?attr/colorBubble"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:titleTextAppearance="@style/Toolbar.TitleText"
                    android:background="@drawable/linear_gradient_drawable">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_Submit"
                        android:layout_gravity="end"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textColor="@color/textLight_color"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/toolbar_title" />
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:paddingBottom="1dp">
                <ImageView
                    android:id="@+id/fundingCover"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/Cover_image"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@xml/gradientblack"
                    android:gravity="center">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:id="@+id/btn_selectimage"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/follow_button_profile_friends"
                        android:tag="false"
                        android:paddingStart="17dp"
                        android:paddingEnd="17dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:text="@string/Lbl_SelectImage"
                        android:textColor="@color/textLight_color"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:layout_gravity="center" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layout_suggestion_Friends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginTop="5dp"
                android:background="?attr/colorBubble"
                android:orientation="vertical">
                <!--Title Section -->
                <LinearLayout
                    android:id="@+id/LayoutTitle"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconTitle"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/TitleEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="@string/Lbl_Title"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:inputType="textCapWords"
                        android:background="@drawable/EditTextStyleOne"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
                <!--Amount Section -->
                <LinearLayout
                    android:id="@+id/LayoutAmount"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconAmount"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/AmountEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="@string/Lbl_Amount"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:inputType="number"
                        android:background="@drawable/EditTextStyleOne"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
                <!--Description Section -->
                <LinearLayout
                    android:id="@+id/LayoutDescription"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconDescription"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="top|center"
                        android:layout_gravity="start"
                        android:paddingTop="6dp"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/DescriptionEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:background="@drawable/EditTextStyleOne"
                        android:hint="@string/Lbl_Description"
                        android:textSize="15sp"
                        android:inputType="textCapWords"
                        android:gravity="start"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
                <View
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_width="match_parent" />
                <com.google.android.gms.ads.doubleclick.PublisherAdView
                    android:id="@+id/multiple_ad_sizes_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:adSize="MEDIUM_RECTANGLE,120x20,250x250,320x100,SMART_BANNER"
                    app:adUnitId="@string/banner_multiple_ad_sizes_id" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>