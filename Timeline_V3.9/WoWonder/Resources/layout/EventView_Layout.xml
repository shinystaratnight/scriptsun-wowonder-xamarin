<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorFill">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_ptwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:longClickable="false"
        android:animationCache="true"
        android:duplicateParentState="true"
        app:statusBarScrim="?attr/colorPrimary"
        android:filterTouchesWhenObscured="true">
        <!-- set toolbar with collapsing effect -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/accent"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:scrimAnimationDuration="500"
            app:layout_scrollFlags="scroll"
            app:collapsedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Collapsed"
            app:expandedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Expanded">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/colorFill"
                android:paddingBottom="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:paddingBottom="1dp">
                    <ImageView
                        android:id="@+id/EventCover"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/Cover_image"
                        android:scaleType="centerCrop" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@xml/gradientblack"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/tvName_ptwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="false"
                            android:layout_marginEnd="11dp"
                            android:layout_marginStart="11dp"
                            android:textColor="@color/textLight_color"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="5dp"
                            android:textSize="20sp"
                            android:gravity="top"
                            android:textStyle="bold"
                            android:layout_centerVertical="false"
                            android:maxLines="2"
                            android:paddingBottom="4dp"
                            android:linksClickable="false" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/colorFill"
                    android:paddingBottom="20dp">
                    <!--Buttons Section-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                         android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="?attr/colorFill"
                        android:foregroundGravity="center|center_horizontal"
                        android:gravity="center|start">
                        <Button
                            android:id="@+id/ButtonGoing"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:textColor="@color/accent"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="@string/Lbl_Go"
                            android:maxWidth="150dp"
                            android:textSize="13sp"
                            android:layout_gravity="start|center"
                            android:layout_weight="5"
                            android:background="@drawable/follow_button_profile_friends"
                            android:layout_marginStart="12dp"
                            android:foregroundGravity="center"
                            android:gravity="center" />
                        <Button
                            android:id="@+id/ButtonIntersted"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginStart="14dp"
                            android:maxWidth="30dp"
                            android:text="@string/Lbl_Interested"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:textColor="@color/accent"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:layout_weight="30"
                            android:textSize="13sp"
                            android:background="@drawable/follow_button_profile_friends"
                            android:foregroundGravity="center_vertical"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="0dp"
                            android:layout_marginEnd="16dp"
                            android:includeFontPadding="false" />
                        <ImageButton
                            android:id="@+id/morebutton"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:background="@drawable/circlegradient5"
                            android:src="@drawable/icon_post_more_vector"
                            android:tint="#ffff"
                            android:layout_marginEnd="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/center_content_profile_scroll_over"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/accent"
                                    android:textSize="17dp"
                                    android:textStyle="bold"
                                    android:text="@string/Lbl_Start_Date"
                                    android:gravity="center"
                                    android:layout_gravity="center" />
                                <TextView
                                    android:id="@+id/txtStartDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                     android:layout_marginTop="1dp"
                                    android:layout_below="@+id/prop_detail_bedroom"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="7dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginTop="4dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:weightSum="2">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/accent"
                                    android:textSize="17dp"
                                     android:textStyle="bold"
                                    android:text="@string/Lbl_End_Date"
                                    android:layout_gravity="center" />
                                <TextView
                                    android:id="@+id/txtEndDate"
                                     android:layout_marginTop="1dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/prop_detail_den"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                   
                      <TextView
                           style="@style/CustomTextdrawableStyle"
                            android:drawableStart="@drawable/icon_visitors_n_vector"
                            android:id="@+id/GoingTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:textSize="14sp"
                            android:text="T"
                             android:layout_marginTop="12dp"
                            android:layout_marginStart="10dp" />
                          <TextView
                           style="@style/CustomTextdrawableStyle"
                            android:drawableStart="@drawable/icon_fav_post_vector"
                            android:id="@+id/InterestedTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:textSize="14sp"
                            android:text="T"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="10dp" />
                        <TextView
                            style="@style/CustomTextdrawableStyle"
                            android:drawableStart="@drawable/icon_place_vector"
                            android:id="@+id/LocationTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:textSize="14sp"
                            android:text="T"
                            android:drawableTint="#F44336"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="10dp" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:layout_below="@+id/LocationTextView"
                            android:id="@+id/maincardview"
                            android:layout_marginStart="21dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="21dp"
                            app:cardBackgroundColor="?attr/colorFill"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0.5dp">
                            <fragment
                                android:id="@+id/map"
                                android:layout_width="match_parent"
                                android:layout_height="135dp"
                                class="com.google.android.gms.maps.MapFragment" />
                        </androidx.cardview.widget.CardView>

                     <TextView
                            android:id="@+id/tv_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:paddingBottom="10dp"
                          
                            android:paddingEnd="10dp"
                            android:paddingTop="15dp"
                            android:textStyle="bold"
                            android:layout_marginStart="21dp"
                            android:text="@string/Lbl_Description"
                            android:textSize="15sp" />

                    <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
                            android:id="@+id/tv_aboutdescUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="center|start"
                            android:paddingBottom="10dp" 
                            android:layout_marginStart="21dp"
                            android:paddingEnd="10dp"
                            android:textSize="14sp" />
                   
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:descendantFocusability="blocksDescendants"
                android:contentDescription="false"
                android:clickable="false"
                android:animationCache="false"
                android:keepScreenOn="false"></androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="false"
        android:layout_height="match_parent">
        <WoWonder.Activities.NativePost.Extra.WRecyclerView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/newsfeedRecyler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginTop="2dp" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@android:color/transparent"
        android:src="@drawable/ic_add"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        app:backgroundTint="@color/accent"
        android:layout_marginBottom="20dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>