<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:background="?attr/colorFill"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:background="?attr/colorFill"
            app:elevation="1dp"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll">
                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_collapseMode="parallax"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageFunding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="260dp"
                        android:minHeight="243dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imageplacholder"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:shadowColor="#444"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="15"
                        android:layout_gravity="start"
                        android:layout_marginEnd="11dp"
                        android:layout_marginStart="11dp"
                        android:paddingBottom="16dp"
                        android:src="@drawable/ic_action_ic_back"
                        android:paddingTop="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_More"
                        android:layout_gravity="end"
                        android:textSize="17sp"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:textColor="@color/textLight_color"
                        android:padding="15dp"
                        android:visibility="gone"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/toolbar_title" />
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/ScrollView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_marginTop="-42dp"
            android:background="@drawable/top_left_radius_shape"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/top_left_radius_shape"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">
                <TextView
                    android:id="@+id/title"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:layout_marginEnd="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textStyle="bold" />
                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorDivider" />
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/text_color_in_between"
                    android:layout_marginTop="13dp"
                    android:textSize="14sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                <RelativeLayout
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/raised"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:layout_alignParentStart="true"
                        android:maxLines="1"
                        android:textColor="@color/primary"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginStart="0dp" />
                    <TextView
                        android:id="@+id/TottalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:maxLines="1"
                        android:layout_alignParentEnd="true"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="0dp" />
                </RelativeLayout>
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:progressDrawable="@drawable/gradient_progress"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="10dp"
                    android:indeterminate="false"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:max="100"
                    android:minHeight="50dp"
                    android:minWidth="200dp"
                    android:progress="0" />
                <TextView
                    android:id="@+id/timedonation"
                    android:textSize="14sp"
                    android:padding="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_in_between"
                    android:layout_gravity="top|start"
                    android:gravity="top|start"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
                <Button
                    android:id="@+id/DonateButton"
                    android:layout_below="@+id/Resetbutton"
                    android:background="@drawable/follow_button_profile_friends_pressed"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/Lbl_Donate"
                    android:textColor="@color/textLight_color"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="19dp"
                    android:gravity="center"
                    android:layout_marginBottom="5dp" />
                <Button
                    android:id="@+id/share"
                    android:layout_below="@+id/Resetbutton"
                    android:background="@drawable/Shape_Radius_Line_Grey"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/Lbl_Share"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:textColor="?attr/colorReact"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_marginBottom="6dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="?attr/colorDivider" />
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:id="@+id/cont"
                        android:textSize="13sp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/follow_button_profile_friends"
                        android:tag="false"
                        android:paddingTop="1dp"
                        android:paddingStart="7dp"
                        android:paddingEnd="7dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:text="@string/Btn_Contact"
                        android:textColor="@color/accent" />
                    <ImageView
                        android:id="@+id/imageAvatar"
                        android:scaleType="centerCrop"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_marginBottom="13dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/no_profile_image" />
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@id/imageAvatar"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imageAvatar"
                        android:textSize="12sp" />
                </RelativeLayout>
                <!--recent donations Section-->
                <LinearLayout
                    android:id="@+id/layout_recent_donations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
	                <View
		                android:layout_width="match_parent"
		                android:layout_height="1dp"
		                android:layout_marginTop="10dp"
		                android:background="?attr/colorDivider" />
	                <TextView
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:paddingBottom="10dp"
		                android:textStyle="bold"
		                android:paddingTop="15dp"
		                android:text="@string/Lbl_RecentDonations"
		                android:textSize="16sp" />  
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>