<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:background="?attr/colorFill"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:background="?attr/colorFill"
            app:elevation="1dp"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        app:layout_collapseMode="parallax"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/JobCoverImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="260dp"
                            android:minHeight="243dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/imageplacholder"
                            android:visibility="visible" />
                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="start"
                            android:layout_marginEnd="11dp"
                            android:layout_marginStart="11dp"
                            android:paddingBottom="16dp"
                            android:src="@drawable/ic_action_ic_back"
                            android:paddingTop="15dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_More"
                            android:layout_gravity="end"
                            android:textSize="17sp"
                            android:layout_alignParentEnd="true"
                            android:textStyle="bold"
                            android:textColor="@color/textLight_color"
                            android:padding="15dp"
                            android:visibility="gone"
                            android:layout_marginEnd="10dp"
                            android:id="@+id/toolbar_title" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp">
                        <View
                            android:background="@drawable/rounded_corner_from_top_shape"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_marginEnd="9dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="0dp"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            card_view:cardElevation="0dp"
                            card_view:cardCornerRadius="13dp">
                            <ImageView
                                android:id="@+id/JobAvatar"
                                android:scaleType="centerCrop"
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:layout_margin="6dp"
                                android:layout_gravity="center"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/imageplacholder_circle" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/ScrollView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:background="@xml/rounded_corner"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:translationY="0dp"
                android:layout_marginTop="0dp">
                <TextView
                    android:id="@+id/Jobtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="3dp"
                    android:paddingStart="13dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="0dp"
                    android:textStyle="bold"
                    android:text="Amazing Life"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/pageName"
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="3dp"
                    android:paddingStart="13dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="0dp"
                    android:text="ExamplePage"
                    android:textSize="13sp" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/JobInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="2dp"
                    android:text="Istanbul"
                    android:textSize="13sp" />
                <Button
                    android:id="@+id/JobButton"
                    android:background="@drawable/follow_button_profile_friends_pressed"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/Lbl_apply_now"
                    android:textColor="@color/textLight_color"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="19dp"
                    android:gravity="center"
                    android:layout_marginBottom="5dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="-3dp">
                    <TextView
                        android:id="@+id/minimum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:layout_marginStart="11dp"
                        android:text="@string/Lbl_minimum"
                        android:layout_gravity="center"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/minimumNumber"
                        android:layout_marginStart="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/minimum"
                        android:text="$200 Per Month"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/maximum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:layout_toEndOf="@+id/minimum"
                        android:layout_marginStart="60dp"
                        android:text="@string/Lbl_maximum"
                        android:layout_gravity="center"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/maximumNumber"
                        android:layout_marginStart="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/minimum"
                        android:layout_below="@+id/maximum"
                        android:layout_centerHorizontal="true"
                        android:text="$200 Per Month"
                        android:textSize="12dp" />
                    <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
                        android:layout_below="@+id/minimumNumber"
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_alignParentBottom="true"
                        android:text="Nice and good work in Istanbul"
                        android:gravity="center|start"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="1dp"
                        android:paddingEnd="5dp"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:hyphenationFrequency="none"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>