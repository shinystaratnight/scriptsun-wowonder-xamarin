<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:fitsSystemWindows="true"
        app:statusBarScrim="?attr/colorPrimary">
      <com.google.android.material.appbar.CollapsingToolbarLayout
          android:id="@+id/collapsingToolbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fitsSystemWindows="false"
          app:contentScrim="?attr/colorPrimary"
          app:expandedTitleMarginEnd="64dp"
          app:expandedTitleMarginStart="48dp"
          app:expandedTitleTextAppearance="@android:color/transparent"
          app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
          app:scrimAnimationDuration="500"
          app:statusBarScrim="?attr/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:minHeight="?attr/actionBarSize"
            android:orientation="vertical">
          <ImageView
              android:id="@+id/cover_image"
              android:scaleType="centerCrop"
              android:layout_width="match_parent"
              android:layout_height="335dp" />
          <LinearLayout
              android:id="@+id/ll_sub"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@+id/back"
              android:layout_centerInParent="true"
              android:gravity="center_horizontal"
              android:layoutDirection="ltr"
              android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:foregroundGravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
              <ImageView
                  android:id="@+id/back_view"
                  android:scaleType="centerCrop"
                  android:layout_width="115dp"
                  android:layout_centerInParent="true"
                  android:layout_height="115dp"
                  android:src="@drawable/background_view_profile"
                  app:layout_collapseMode="parallax" />
              <ImageView
                  android:id="@+id/profileimage_head"
                  android:scaleType="centerCrop"
                  android:layout_width="79dp"
                  android:layout_height="79dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_centerInParent="true"
                  app:layout_collapseMode="parallax" />
              <refractored.controls.CircleImageView
                  android:padding="3dp"
                  android:id="@+id/online_view"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:visibility="invisible"
                  android:layout_alignBottom="@+id/profileimage_head"
                  android:layout_toEndOf="@+id/profileimage_head"
                  android:translationY="16dp"
                  android:translationX="-7dp"
                  app:civ_border_width="2dp"
                  android:src="@drawable/green_color"
                  app:civ_border_color="@color/textLight_color" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center">
                <at.markushi.ui.CircleButton
                    android:id="@+id/AddUserbutton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cb_color="#6666ff"
                    app:cb_pressedRingWidth="3dip"
                    android:src="@drawable/ic_add_user"
                    android:tint="@color/textLight_color" />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center">
                <at.markushi.ui.CircleButton
                    android:id="@+id/message_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cb_color="#444"
                    app:cb_pressedRingWidth="3dip"
                    android:src="@drawable/ic_message_user"
                    android:tint="@color/textLight_color" />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center">
                <at.markushi.ui.CircleButton
                    android:id="@+id/morebutton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cb_color="#bc4b4b"
                    app:cb_pressedRingWidth="3dip"
                    android:src="@drawable/ic_more_dots_horizntal"
                    android:tint="@color/textLight_color" />
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>
          <ImageView
              android:id="@+id/back"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_gravity="start"
              android:layout_marginStart="11dp"
              android:paddingBottom="16dp"
              android:paddingTop="15dp"
              android:src="@drawable/ic_action_ic_back" />
          <TextView
              android:id="@+id/username_profile"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:paddingTop="3dp"
              android:translationX="0dp"
              android:textAlignment="center"
              android:textColor="@color/textLight_color"
              android:textSize="18dp"
              android:textStyle="bold"
              android:paddingBottom="3dp"
              android:layout_marginTop="11dp"
              android:foregroundGravity="center_horizontal"
              android:gravity="center"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="false" /> 
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/following_transparent_button_profile"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">
          <LinearLayout
              android:id="@+id/CountFollowersLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
              <TextView
                  android:id="@+id/CountFollowers"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/textLight_color"
                  android:textSize="19dp"
                  android:layout_gravity="center"
                  android:textStyle="bold" />
              <TextView
                  android:id="@+id/txtFollowers"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/prop_detail_bedroom"
                  android:layout_centerHorizontal="true"
                  android:text="@string/Lbl_Followers"
                  android:textColor="@color/lightcolor"
                  android:textSize="12dp" />
            </LinearLayout>
          </LinearLayout>
          <View
              android:id="@+id/ViewFollowers"
              android:layout_width="1dp"
              android:layout_height="20dp"
              android:layout_marginBottom="7dp"
              android:layout_marginEnd="4dp"
              android:layout_marginTop="4dp"
              android:background="?attr/colorDivider" />
          <LinearLayout
              android:id="@+id/CountFollowingLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">
              <TextView
                  android:id="@+id/CountFollowing"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/textLight_color"
                  android:textSize="19dp"
                  android:layout_gravity="center"
                  android:textStyle="bold" />
              <TextView
                  android:id="@+id/txtFollowing"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/prop_detail_den"
                  android:layout_centerHorizontal="true"
                  android:text="@string/Lbl_Following"
                  android:textColor="@color/lightcolor"
                  android:textSize="12dp" />
            </LinearLayout>
          </LinearLayout>
          <View
              android:id="@+id/ViewLikes"
              android:layout_width="1dp"
              android:layout_height="20dp"
              android:layout_marginBottom="7dp"
              android:layout_marginStart="4dp"
              android:layout_marginTop="4dp"
              android:background="?attr/colorDivider" />
          <LinearLayout
              android:id="@+id/CountLikesLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">
              <TextView
                  android:id="@+id/CountLikes"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/textLight_color"
                  android:textSize="19dp"
                  android:layout_gravity="center"
                  android:textStyle="bold" />
              <TextView
                  android:id="@+id/txtLikes"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/prop_detail_bathroom"
                  android:layout_centerHorizontal="true"
                  android:text="@string/Btn_Likes"
                  android:textColor="@color/lightcolor"
                  android:textSize="12dp" />
            </LinearLayout>
          </LinearLayout>
          <View
              android:id="@+id/ViewPoints"
              android:layout_width="1dp"
              android:layout_height="20dp"
              android:layout_marginBottom="7dp"
              android:layout_marginStart="4dp"
              android:layout_marginTop="4dp"
              android:background="?attr/colorDivider" />
          <LinearLayout
              android:id="@+id/CountPointsLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">
              <TextView
                  android:id="@+id/CountPoints"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/textLight_color"
                  android:textSize="19dp"
                  android:layout_gravity="center"
                  android:textStyle="bold" />
              <TextView
                  android:id="@+id/txtPoints"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/prop_detail_bathroom"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_centerHorizontal="true"
                  android:text="@string/Btn_Points"
                  android:textColor="@color/lightcolor"
                  android:textSize="12dp" />
            </LinearLayout>
          </LinearLayout>
        </LinearLayout>
      </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
	  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		  android:id="@+id/swipeRefreshLayout"
		  app:layout_behavior="@string/appbar_scrolling_view_behavior"
		  android:layout_width="match_parent"
		  android:layout_height="match_parent">
		  <WoWonder.Activities.NativePost.Extra.WRecyclerView
			  android:id="@+id/newsfeedRecyler"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:scrollbars="vertical"
			  android:layout_marginTop="2dp" />
	  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
	  <com.google.android.gms.ads.AdView
		  android:id="@+id/adView"
		  app:adSize="SMART_BANNER"
		  app:adUnitId="@string/banner_ad_unit_id"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:layout_gravity="bottom"
		  android:layout_alignParentBottom="true"
		  android:layout_centerHorizontal="true" /> 
  </androidx.coordinatorlayout.widget.CoordinatorLayout>
