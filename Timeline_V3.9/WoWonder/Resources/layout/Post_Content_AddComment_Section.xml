<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/addCommentLayout"
    android:focusable="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_weight="10">
    <refractored.controls.CircleImageView
        android:id="@+id/image"
        android:layout_weight="0"
        android:layout_width="38dp"
        android:layout_marginStart="10dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/textLight_color"
        android:src="@drawable/no_profile_image_circle" />
    <LinearLayout
      android:id="@+id/LayoutEditText"
      android:backgroundTint="?attr/colorBubble"
      android:background="@drawable/shape_rectangle_white_round_corner_signin_four"
      android:layout_weight="10"
      android:layout_marginStart="7dp"
      android:layout_marginEnd="10dp"
      android:layout_marginTop="0dp"
      android:foreground="?attr/selectableItemBackground"
      android:focusable="true"
      android:clickable="true"
      android:gravity="center_vertical"
      android:layout_gravity="center_vertical"
      android:layout_marginBottom="0dp"
      android:layout_height="35dp"
      android:layout_width="match_parent">
      <TextView
        android:layout_weight="8"
        android:id="@+id/postText"
        android:focusable="false"
        android:clickable="false"
        android:layout_toEndOf="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:paddingStart="13dp"
        android:paddingEnd="10dp"
        android:lines="1"
        android:textColor="#888"
        android:text="@string/Lbl_Whats_Going_On"
        android:textSize="12sp" />
      <ImageView
        android:id="@+id/Imageicon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:focusable="false"
        android:clickable="false"
        android:padding="4dp"
        android:tint="?attr/colorReact"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_image_vector" />
      <ImageView
        android:id="@+id/Emojiicon"
        android:layout_width="25dp"
        android:layout_marginEnd="7dp"
        android:layout_height="25dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:focusable="false"
        android:clickable="false"
        android:padding="4dp"
        android:layout_weight="1"
        android:tint="?attr/colorReact"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_sticker_vector" />
    </LinearLayout>
</LinearLayout>