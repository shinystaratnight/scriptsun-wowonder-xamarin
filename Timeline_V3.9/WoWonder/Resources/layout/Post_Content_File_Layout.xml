<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_marginTop="10dp"
                 android:background="?attr/colorDivider"
                 android:layout_width="match_parent"
                 android:layout_height="55dp">
        <ImageView
            android:id="@+id/fileIcon"
            android:src="@drawable/icon_post_file_vector"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="25dp"
            android:tint="#999"
            android:layout_height="25dp" />
        <TextView
            android:layout_toEndOf="@+id/fileIcon"
            android:id="@+id/postfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:paddingEnd="10dp"
            android:translationY="0dp"
            android:capitalize="characters"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="60dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:textSize="13sp" />
        <at.markushi.ui.CircleButton
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cb_color="?attr/colorFill"
            app:cb_pressedRingWidth="6dip"
            android:src="@drawable/icon_post_download_vector"
            android:id="@+id/downlaodButton"
            android:tag="Play"
            android:tint="@color/accent" />
    </RelativeLayout>
