<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:focusable="true" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:background="@drawable/center_content_profile_scroll_over"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:id="@+id/contentPost"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/description"
        android:maxHeight="300dp"
        android:clickable="false"
        android:focusable="false"
        android:minHeight="150dp"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:src="@drawable/imageplacholder" />
    <ImageView
        android:id="@+id/locationIcon"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true"
        android:maxHeight="550dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginTop="10dp"
        android:tint="#E85668"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_map_marker_filled_vector" />
    <TextView
        android:layout_toEndOf="@+id/locationIcon"
        android:layout_below="@+id/image"
        android:id="@+id/postProductLocationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="start|center"
        android:layout_gravity="start|center"
        android:textStyle="normal"
        android:textSize="15sp" />
    <TextView
        android:layout_below="@+id/postProductLocationText"
        android:id="@+id/postProductTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="9dp"
        android:paddingBottom="3dp"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:paddingTop="3dp"
        android:textStyle="bold"
        android:textSize="15sp" />
    <TextView
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/statusText"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#4BB462"
        android:background="@drawable/shape_radius_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="@string/Lbl_In_Stock"
        android:textSize="13dp" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/postProductTitle"
        android:background="?attr/colorDivider" />
    <ImageView
        android:layout_below="@+id/view"
        android:id="@+id/priceIcon"
        android:scaleType="centerCrop"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:tint="#8CBA51"
        android:layout_toStartOf="@+id/priceHead"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="10dp"
        android:gravity="top"
        android:layout_alignParentStart="true"
        android:layout_gravity="top"
        android:src="@drawable/icon_post_bank_vector" />
    <TextView
        android:layout_toEndOf="@+id/priceIcon"
        android:layout_below="@+id/view"
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="3dp"
        android:text="i am here "
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:paddingStart="1dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:textSize="14sp" />
    <ImageView
        android:layout_below="@+id/priceIcon"
        android:id="@+id/tagIcon"
        android:scaleType="centerCrop"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:tint="#2196F3"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:gravity="top"
        android:layout_gravity="top"
        android:src="@drawable/icon_post_tag_vector" />
    <TextView
        android:layout_toEndOf="@+id/tagIcon"
        android:layout_below="@+id/priceIcon"
        android:id="@+id/typeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="3dp"
        android:text="i am here "
        android:layout_marginTop="5dp"
        android:paddingBottom="4dp"
        android:paddingStart="1dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:textSize="14sp" />
    <ImageView
        android:layout_below="@+id/tagIcon"
        android:id="@+id/infoIcon"
        android:scaleType="centerCrop"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:tint="#A854A5"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="10dp"
        android:gravity="top"
        android:layout_gravity="top"
        android:src="@drawable/icon_post_info_vector" />
    <TextView
        android:layout_toEndOf="@+id/infoIcon"
        android:layout_below="@+id/tagIcon"
        android:id="@+id/postProductContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="3dp"
        android:text="i am here "
        android:maxLines="2"
        android:layout_marginTop="7dp"
        android:paddingBottom="4dp"
        android:paddingStart="1dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:textSize="13sp" />
</RelativeLayout>