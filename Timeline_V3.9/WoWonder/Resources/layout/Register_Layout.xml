
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:backgroundTint="#00000000"
    android:minWidth="25px"
    android:minHeight="25px">
    <ScrollView
        android:id="@+id/mainscrollView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@xml/login_background_shape">
        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="?android:attr/actionBarSize"
            android:padding="5dp">
            <!-- Here you can put your logo or brand name -->
            <ImageView
              android:id="@+id/Logoplace"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:layout_margin="40dp"
              android:src="@drawable/logo"  />
            <EditText
                android:id="@+id/usernamefield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_white_round_corner_signin_four"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="15dp"
                android:hint="@string/Lbl_Username"
                android:textColorHint="@color/textLight_color"
                android:textColor="@color/textLight_color"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:layout_below="@+id/imageLogo" />
            <EditText
                android:id="@+id/firstNamefield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_white_round_corner_signin_four"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="15dp"
                android:hint="@string/Lbl_First_Name"
                android:textColorHint="@color/textLight_color"
                android:textColor="@color/textLight_color"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:layout_below="@+id/imageLogo" />
            <EditText
                android:id="@+id/lastNamefield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_white_round_corner_signin_four"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="15dp"
                android:hint="@string/Lbl_Last_Name"
                android:textColorHint="@color/textLight_color"
                android:textColor="@color/textLight_color"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:layout_below="@+id/imageLogo" />
            <EditText
                android:id="@+id/emailfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_white_round_corner_signin_four"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="15dp"
                android:hint="@string/Lbl_Email"
                android:textColorHint="@color/textLight_color"
                android:textColor="@color/textLight_color"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:layout_below="@+id/imageLogo" />
            <EditText
                android:id="@+id/passwordfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTxtEmail"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_white_round_corner_signin_four"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="15dp"
                android:hint="@string/Lbl_Password"
                android:textColor="@color/textLight_color"
                android:textColorHint="@color/textLight_color"
                android:inputType="textPassword"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/ConfirmPasswordfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTxtEmail"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_white_round_corner_signin_four"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="15dp"
                android:hint="@string/Lbl_ConfirmPassword"
                android:textColor="@color/textLight_color"
                android:textColorHint="@color/textLight_color"
                android:inputType="textPassword"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/Genderfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTxtEmail"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_white_round_corner_signin_four"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="15dp"
                android:hint="@string/Lbl_Gender"
                android:textColor="@color/textLight_color"
                android:textColorHint="@color/textLight_color"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />
            <EditText
              android:id="@+id/Phonefield"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/editTxtEmail"
              android:layout_marginStart="30dp"
              android:layout_marginEnd="30dp"
              android:layout_marginTop="10dp"
              android:background="@drawable/shape_rectangle_white_round_corner_signin_four"
              android:paddingBottom="15dp"
              android:paddingStart="20dp"
              android:paddingEnd="20dp"
              android:paddingTop="15dp"
              android:hint="@string/Lbl_Phone"
              android:visibility="gone"
              android:textColor="@color/textLight_color"
              android:textColorHint="@color/textLight_color"
              android:inputType="phone"
              android:textSize="15sp" />
            <LinearLayout
				android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/termCheckBox"
                    app:buttonTint="#80ffffff" />
                <TextView
                    android:text="@string/Lbl_I_agree_to_the"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstTermTextView"
                    android:textSize="12sp"
                    android:textColor="#80ffffff"
                    android:layout_gravity="center" />
            </LinearLayout>
            <LinearLayout
				android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp">
                <TextView
                    android:text="@string/Terms_of_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/secTermTextView"
                    android:textColor="#80ffffff"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="0dp" />
                <TextView
                    android:text="@string/Privacy_Policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/secPrivacyTextView"
                    android:textColor="#80ffffff"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="0dp" />
            </LinearLayout>
            <RelativeLayout
              android:minWidth="25px"
              android:minHeight="25px"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="35"
              android:layout_marginTop="10dp">
              <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:visibility="invisible"
                android:gravity="center_horizontal"
                android:progressTint="@color/textLight_color" />
              <Button
                android:background="@xml/background_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="@string/Lbl_Register"
                android:textColor="@color/textLight_color"
                android:textSize="15dp"
                android:clickable="true"
                android:textAllCaps="false"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:id="@+id/signUpButton" />
            </RelativeLayout> 
            <View 
              android:layout_height="?android:attr/actionBarSize"
              android:layout_width="match_parent" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>