<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical"
    android:background="?attr/colorFill"
    android:focusable="false"
    android:layout_alignParentStart="true"
    android:foregroundGravity="center_horizontal"
    android:gravity="center">
	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
            app:title="@string/Lbl_MyAffiliates"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
			android:background="@drawable/linear_gradient_drawable">
		</androidx.appcompat.widget.Toolbar>
	</com.google.android.material.appbar.AppBarLayout>
  <ScrollView  
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
      android:id="@+id/CurrentPasswordLiner"
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:gravity="top|center"
      android:layout_gravity="top|center"
      android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/ImageUser"
            android:scaleType="centerCrop"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:focusable="false"
            android:clickable="false"
            android:src="@drawable/no_profile_image_circle" />
		<TextView
            android:id="@+id/myAffiliatesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="20dp"
            android:focusable="false"
            android:clickable="false"
            android:text="Earn up to $0.10 for each user your refer to us !"
            android:layout_alignParentStart="true"
            android:gravity="start"
			android:textSize="13dp"
            android:textAlignment="textStart" />
		<TextView
            android:id="@+id/linkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#1B5E20"
            android:layout_marginTop="20dp"
            android:focusable="false"
            android:clickable="false"
            android:layout_alignParentStart="true"
            android:gravity="start"
			android:textSize="13dp"
            android:textAlignment="textStart" />
		 <Button
			android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/cont"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/follow_button_profile_friends"
            android:tag="false"
            android:paddingTop="1dp"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:text="@string/Lbl_ShareTo"
            android:textColor="@color/accent" />
        <WoWonder.Helpers.Ads.TemplateView
          android:id="@+id/my_template"
          android:padding="8dp"
          android:visibility="gone"
          app:gnt_template_type="@layout/gnt_medium_template_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>