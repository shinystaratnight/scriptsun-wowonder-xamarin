<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorFill"
    app:cardElevation="0.6dp" 
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:id="@+id/linklinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="12"
        android:layout_marginTop="0dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/Image"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:maxHeight="165dp"
            android:minHeight="135dp"
            android:layout_width="match_parent"
            android:layout_weight="6.5" />
        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:paddingEnd="9dp"
            android:paddingStart="9dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:backgroundTint="#E85668"
            android:background="@drawable/shape_radius_btn"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:focusable="false"
            android:clickable="false"
            android:maxLines="1"
            android:text="@string/Lbl_Event"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp" />
        <TextView
            android:layout_below="@+id/Image"
            android:id="@+id/event_titile"
            android:layout_weight="1.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:focusable="false"
            android:clickable="false"
            android:lines="1"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="3dp" />
        <TextView
            android:layout_below="@+id/event_titile"
            android:id="@+id/event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="14dp"
            android:textStyle="normal"
            android:layout_marginEnd="5dp"
            android:focusable="false"
            android:clickable="false"
            android:maxLines="1"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp" />
        <ImageView
            android:layout_below="@+id/event_description"
            android:id="@+id/placeImage"
            android:scaleType="centerCrop"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@drawable/circlegradient5"
            android:tint="#ffff"
            android:padding="4dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/icon_map_marker_filled_vector" />
        <TextView
            android:layout_below="@+id/event_description"
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginTop="4dp"
            android:layout_centerVertical="true"
            android:textStyle="normal"
            android:layout_marginEnd="29dp"
            android:focusable="false"
            android:clickable="false"
            android:capitalize="characters"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toEndOf="@id/placeImage"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>