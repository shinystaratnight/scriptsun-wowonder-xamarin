<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="120dp"
		android:focusable="false"
android:focusableInTouchMode="false"
		 android:paddingStart="6dp"
        android:id="@+id/Image_container"
        android:layout_height="120dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ImageGroup"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_group"
            android:gravity="start" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@xml/gradientblack" />
        <LinearLayout
            android:id="@+id/event_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center|bottom"
            android:foregroundGravity="bottom">
            <TextView
                android:id="@+id/Group_titile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textLight_color"
                android:textSize="13dp"
                android:textStyle="normal"
                android:layout_marginEnd="5dp"
                android:focusable="false"
                android:clickable="false"
                android:lines="2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom"
                android:gravity="bottom" />
        </LinearLayout>
        <ImageView
            android:id="@+id/colorbutton2"
            android:layout_width="27dip"
            android:layout_height="27dip"
            android:layout_gravity="end"
		    android:background="@drawable/shape_circle_stroke"
            android:src="@drawable/sharegroup"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:tint="#444" />
    </RelativeLayout>