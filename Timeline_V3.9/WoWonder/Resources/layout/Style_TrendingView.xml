<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="10dp">
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Lbl_LastBlogs"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_gravity="start|center"
        android:textColor="@color/accent"
        android:paddingTop="5dp"  />
    <LinearLayout
        android:id="@+id/UserItem_Layout"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/UserImageProfile"
            android:scaleType="centerCrop"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/no_profile_image_circle" 
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp" />
        <TextView
            android:id="@+id/Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/accent"
            android:text="wael anjo"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/secondaryText"
            android:text="1 Hour ago"
            android:textSize="11sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:ellipsize="end" 
            android:lines="2"
            android:layout_marginEnd="3dp"
            android:textStyle="bold"
            android:layout_gravity="start|center"
            android:gravity="start|center"
            android:layout_below="@+id/UserImageProfile"
            android:text="Title Blogs"
            android:textSize="14dp" />
        <ImageView
            android:id="@+id/Image"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:focusable="false"
            android:clickable="false"
            android:padding="5dp"
            android:layout_gravity="end|center"
            android:src="@drawable/ImagePlacholder"
            android:focusableInTouchMode="false" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="?attr/colorDivider" />
    <TextView
        android:id="@+id/View_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:lines="1"
        android:text="@string/Lbl_SeeAll" 
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:focusable="false"
        android:clickable="false" /> 
</LinearLayout>