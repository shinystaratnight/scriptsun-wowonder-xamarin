<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_weight="10">
    <refractored.controls.CircleImageView
        android:id="@+id/image"
        android:layout_weight="0"
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/textLight_color"
        android:src="@drawable/Cover_image" />
    <TextView
        android:id="@+id/postText"
        android:focusable="true"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        android:layout_toEndOf="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:paddingStart="13dp"
        android:paddingEnd="10dp"
        android:lines="2"
        android:layout_weight="6"
        android:text="@string/Lbl_Whats_Going_On"
        
        android:textSize="12sp" />
    <LinearLayout
		android:id="@+id/photoLinear"
        android:focusable="true"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/photoimage"
            android:layout_width="18dp"
            android:paddingStart="0dp"
             android:layout_marginTop="5dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:scaleType="centerCrop"
                      android:src="@drawable/icon_camera_vector" />
        <TextView
            android:id="@+id/postText"
            android:layout_toEndOf="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Lbl_Photos"
               android:layout_marginTop="5dp"
            android:textSize="9sp" />
    </LinearLayout>
    <LinearLayout
		android:id="@+id/moreLinear"
        android:layout_toEndOf="@+id/postText"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/moreimage"
            android:layout_width="21dp"
            android:paddingStart="2dp"
            android:layout_marginTop="4dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:tint="#999"
            android:scaleType="centerCrop"
            android:src="@drawable/lb_ic_more" />
        <TextView
            android:id="@+id/postText"
            android:layout_toEndOf="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Lbl_More"
              android:layout_marginTop="2dp"
            android:textSize="9sp" />
    </LinearLayout>
</LinearLayout>