<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    android:layout_below="@+id/liner1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:gravity="start"
    app:columnCount="2"
    app:useDefaultMargins="true" > 
    <ImageView
        android:id="@+id/IconMembers"
        android:scaleType="centerCrop"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_columnWeight="0"
        android:tint="?attr/colorReact"
        android:gravity="start|center"
        android:src="@drawable/ic_groups" />
    <TextView
        android:id="@+id/membersText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:layout_weight="15"
        android:layout_marginTop="-1dp"
        android:padding="2dp"
        android:text="@string/Lbl_Members"
        app:layout_columnWeight="1"
        android:foregroundGravity="center_vertical"
        android:gravity="start|center"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp" />
    <ImageView
        android:id="@+id/IconPrivacy"
        android:scaleType="centerCrop"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_columnWeight="0"
        android:tint="?attr/colorReact"
        android:gravity="start|center"
        android:src="@drawable/ic_global_earth" />
    <TextView
        android:id="@+id/PrivacyText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:layout_weight="15"
        android:text="@string/Radio_Public"
        android:layout_marginTop="-1dp"
        android:padding="2dp"
        app:layout_columnWeight="1"
        android:foregroundGravity="center_vertical"
        android:gravity="start|center"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp" />
    <ImageView
        android:id="@+id/IconCategory"
        android:scaleType="centerCrop"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_columnWeight="0"
        android:tint="?attr/colorReact"
        android:gravity="start|center"
        android:src="@drawable/ic_tag_cat" />
    <TextView
        android:id="@+id/CategoryText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:layout_weight="15"
        android:layout_marginTop="-1dp"
        android:padding="2dp"
        android:text="sport and more"
        app:layout_columnWeight="1"
        android:foregroundGravity="center_vertical"
        android:gravity="start|center"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp" />
    <ImageView
        android:id="@+id/IconInvite"
        android:scaleType="centerCrop"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_columnWeight="0"
        android:tint="?attr/colorReact"
        android:gravity="start|center"
        android:src="@drawable/ic_add_user" />
    <TextView
        android:id="@+id/InviteText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:layout_weight="15"
        android:layout_marginTop="-1dp"
        android:padding="2dp"
        android:text="@string/Lbl_AddYourFriendsToGroup"
        app:layout_columnWeight="1"
        android:foregroundGravity="center_vertical"
        android:gravity="start|center"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp" />
</androidx.gridlayout.widget.GridLayout>