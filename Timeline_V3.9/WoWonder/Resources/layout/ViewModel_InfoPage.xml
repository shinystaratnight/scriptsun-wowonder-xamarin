<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--rating Page-->
    <LinearLayout
        android:id="@+id/ratingLiner"
        android:layout_below="@+id/liner2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp"
        android:weightSum="4"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:foregroundGravity="center|center_horizontal"
        android:gravity="center|start">
        <TextView
            android:id="@+id/ratingtextview"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="@string/Lbl_ratings"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:layout_weight="0.6"
            android:layout_marginStart="0dp"
            android:foregroundGravity="center"
            android:gravity="center" />
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_marginTop="-2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/liner2"
            android:stepSize="1"
            android:rating="3.7"
            android:secondaryProgressTint="@android:color/transparent"
            android:progressTint="#FF9800"
            android:foregroundGravity="center"
            android:gravity="center" />
    </LinearLayout>
    <!--Page Like Count-->
    <LinearLayout
        android:id="@+id/liner3"
        android:layout_below="@+id/ratingLiner"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:foregroundGravity="center|center_horizontal"
        android:gravity="center|start">
        <TextView
            android:id="@+id/IconLike"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="T"
            android:textSize="22sp"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/LikeCountText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:layout_weight="15"
            android:text="dsfdsfsdfsdfsdasd"
            android:maxLines="1"
            android:layout_gravity="start|center"
            android:gravity="start|center"/>
    </LinearLayout>
    <!--Page Category-->
    <LinearLayout
        android:id="@+id/liner4"
        android:layout_below="@+id/liner3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="5dp"
        android:foregroundGravity="center|center_horizontal"
        android:gravity="center|start">
        <TextView
            android:id="@+id/IconCategory"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="T"
            android:textSize="22sp"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/CategoryText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:textSize="14sp"
            android:text="dsfdsfsdfsdfsdasd"
            android:maxLines="1"
            android:layout_gravity="start|center"
            android:gravity="start|center" />
    </LinearLayout>
    <!--Page Members-->
    <LinearLayout
        android:id="@+id/liner5"
        android:layout_below="@+id/liner4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="5dp"
        android:foregroundGravity="center|center_horizontal"
        android:gravity="center|start">
        <TextView
            android:id="@+id/IconMembers"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="T"
            android:textSize="22sp"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/MembersText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:textSize="14sp"
            android:text="@string/Lbl_InviteFriendsToPage"
            android:maxLines="1"
            android:layout_gravity="start|center"
            android:gravity="start|center"/>
    </LinearLayout>
    <!-- About Page info-->
    <LinearLayout
        android:layout_below="@+id/liner5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:background="?attr/colorFill"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="15dp"
            android:text="@string/Lbl_About"
            android:textSize="14sp" />
        <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
            android:id="@+id/aboutdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center|start"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>